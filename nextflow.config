manifest {
    homePage = 'https://github.com/adigenova/nf-gene-fusions'
    description = 'Gene fusion caller'
    mainScript = 'main.nf'
    author = 'Alex Di Genova'
    version = '1.0'
}


// Load base.config by default for all pipelines
//includeConfig 'conf/base.config'

// Load genomes.config
//includeConfig 'conf/genomes.config'


profiles {
  docker {
	docker.enabled = true
	process.container = 'adigenova/nf-gene-fusions:v1.0'
	}
  singularity {
	singularity.enabled = true
	process.container = 'shub://adigenova/nf-gene-fusions:v1.0'
	pullTimeout = "200 min"
	}
}

process {
    shell =  ['/bin/bash','-o','pipefail']
}

//additionals files for visualization of arriba results
params {

//default arriba lib location from the container
arriba_lib='/opt/conda/envs/gene-fusions/var/lib/arriba'
// Options: Building STAR-star_index
star_index = false
read_length = 100

//Defaults for read data
reads = "reads/*{1,2}.fastq.gz"
reads_csv = null
debug = false

// Shared default variables across different scripts
outdir = './results'
tracedir = "${params.outdir}/nf-pipeline_info"

// Defaults
max_memory = 128.GB
max_cpus = 8
max_time = 240.h

}



timeline {
  enabled = true
  file = "${params.outdir}/nf-pipeline_info/arriba_timeline.html"
}

report {
  enabled = true
  file = "${params.outdir}/nf-pipeline_info/arriba_report.html"
}

trace {
  enabled = true
  file = "${params.outdir}/nf-pipeline_info/arriba_trace.txt"
}

dag {
  enabled = true
  file = "${params.outdir}/nf-pipeline_info/arriba_dag.html"
}
